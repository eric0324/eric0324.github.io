---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Header from '../components/Header.astro';
import Breadcrumb from '../components/Breadcrumb.astro';

type Props = CollectionEntry<'blog'>['data'];

const { title, description, pubDate, updatedDate, category, tags } = Astro.props;
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
		<style is:global>
			main {
				width: calc(100% - 2em);
				max-width: 100%;
				margin: 0;
			}
			.article-container {
				max-width: 1060px;
				margin: 0 auto;
				display: grid;
				grid-template-columns: 720px 60px 280px;
				gap: 0;
				padding: 2rem 2rem;
				justify-content: center;
			}
			.prose {
				grid-column: 1;
				color: rgb(var(--gray-dark));
			}
			.toc-wrapper {
				grid-column: 3;
			}
			.toc {
				position: sticky;
				top: 100px;
				max-height: calc(100vh - 150px);
				overflow-y: auto;
				padding: 1.5rem;
				background: white;
				border-radius: 12px;
				box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
			}
			.toc-title {
				font-size: 0.9rem;
				font-weight: 700;
				color: #2c3e50;
				margin: 0 0 1rem 0;
				text-transform: uppercase;
				letter-spacing: 0.05em;
			}
			.toc-list {
				list-style: none;
				padding: 0;
				margin: 0;
			}
			.toc-list li {
				margin-bottom: 0.5rem;
			}
			.toc-list a {
				display: block;
				text-decoration: none;
				line-height: 1.6;
				padding: 0.35rem 0;
				transition: color 0.2s;
			}

			/* H2 - 主標題 (第一層) */
			.toc-h2 {
				font-weight: 700 !important;
				font-size: 0.95rem !important;
				color: #2c3e50 !important;
				margin-top: 1rem !important;
				margin-bottom: 0.5rem !important;
				padding-left: 0 !important;
			}
			.toc-h2:first-of-type {
				margin-top: 0 !important;
			}
			.toc-h2:hover {
				color: #3498db !important;
			}
			.toc-h2.active {
				color: #3498db !important;
			}

			/* H3 - 子標題 (第二層) */
			.toc-h3 {
				font-weight: 400 !important;
				font-size: 0.85rem !important;
				color: #666 !important;
				padding-left: 1.5rem !important;
				margin-left: 0 !important;
			}
			.toc-h3:hover {
				color: #3498db !important;
			}
			.toc-h3.active {
				color: #3498db !important;
			}

			/* H4 - 細項 (第三層) */
			.toc-h4 {
				font-weight: 400 !important;
				font-size: 0.8rem !important;
				color: #999 !important;
				padding-left: 3rem !important;
				margin-left: 0 !important;
			}
			.toc-h4:hover {
				color: #3498db !important;
			}
			.toc-h4.active {
				color: #3498db !important;
			}

			@media (max-width: 1200px) {
				.article-container {
					grid-template-columns: 1fr;
					padding: 1rem;
				}
				.prose {
					grid-column: 1;
					max-width: 720px;
					margin: 0 auto;
				}
				.toc-wrapper {
					display: none;
				}
			}
			.title {
				margin-bottom: 1em;
				padding: 1em 0;
				text-align: center;
				line-height: 1;
			}
			.title h1 {
				margin: 0 0 0.5em 0;
			}
			.date {
				margin-bottom: 0.5em;
				color: rgb(var(--gray));
			}
			.last-updated-on {
				font-style: italic;
			}
			.meta-info {
				display: flex;
				flex-wrap: wrap;
				gap: 0.75rem;
				justify-content: center;
				align-items: center;
				margin-top: 1rem;
			}
			.category-tag, .post-tag {
				display: inline-block;
				padding: 0.35rem 0.85rem;
				border-radius: 20px;
				font-size: 0.85rem;
				text-decoration: none;
				transition: all 0.2s;
			}
			.category-tag {
				background: #3498db;
				color: white;
			}
			.category-tag:hover {
				background: #2980b9;
				transform: translateY(-2px);
			}
			.post-tag {
				background: #f0f0f0;
				color: #666;
			}
			.post-tag:hover {
				background: #e0e0e0;
				color: #333;
				transform: translateY(-2px);
			}
			.tags-section {
				margin-top: 3rem;
				padding-top: 2rem;
				border-top: 1px solid #e0e0e0;
			}
			.tags-list {
				display: flex;
				flex-wrap: wrap;
				gap: 0.5rem;
			}
		</style>
	</head>

	<body>
		<Header />
		<main>
			<div class="article-container">
				<article class="prose">
					<div class="title">
						<div class="date">
							<FormattedDate date={pubDate} />
							{
								updatedDate && (
									<div class="last-updated-on">
										Last updated on <FormattedDate date={updatedDate} />
									</div>
								)
							}
						</div>
						<h1>{title}</h1>
						<Breadcrumb items={[
							{ label: '首頁', href: '/' },
							{ label: '文章', href: '/blog' },
							{ label: title }
						]} />
						<div class="meta-info">
							{category && (
								<a href={`/categories/${category}/`} class="category-tag">
									{category}
								</a>
							)}
						</div>
						<hr />
					</div>
					<slot />
					{tags && tags.length > 0 && (
						<div class="tags-section">
							<div class="tags-list">
								{tags.map((tag) => (
									<a href={`/tags/${tag}/`} class="post-tag">
										#{tag}
									</a>
								))}
							</div>
						</div>
					)}
				</article>

				<!-- Table of Contents -->
				<aside class="toc-wrapper">
					<nav class="toc">
						<h2 class="toc-title">目錄</h2>
						<ul class="toc-list" id="toc-list">
							<!-- Generated by JavaScript -->
						</ul>
					</nav>
				</aside>
			</div>
		</main>
		<Footer />

		<script>
			// Generate Table of Contents
			function generateTOC() {
				const article = document.querySelector('.prose');
				const tocList = document.getElementById('toc-list');
				if (!article || !tocList) return;

				const headings = article.querySelectorAll('h2, h3, h4');
				if (headings.length === 0) {
					document.querySelector('.toc-wrapper').style.display = 'none';
					return;
				}

				headings.forEach((heading, index) => {
					// Add ID to heading if it doesn't have one
					if (!heading.id) {
						heading.id = `heading-${index}`;
					}

					const li = document.createElement('li');
					const a = document.createElement('a');
					a.href = `#${heading.id}`;
					a.textContent = heading.textContent;
					a.className = `toc-${heading.tagName.toLowerCase()}`;

					a.addEventListener('click', (e) => {
						e.preventDefault();
						heading.scrollIntoView({ behavior: 'smooth', block: 'start' });
						// Update URL without scrolling
						history.pushState(null, null, `#${heading.id}`);
					});

					li.appendChild(a);
					tocList.appendChild(li);
				});
			}

			// Highlight active section
			function highlightActiveTOC() {
				const headings = document.querySelectorAll('.prose h2, .prose h3, .prose h4');
				const tocLinks = document.querySelectorAll('.toc-list a');

				let current = '';

				headings.forEach((heading) => {
					const rect = heading.getBoundingClientRect();
					if (rect.top <= 150) {
						current = heading.id;
					}
				});

				tocLinks.forEach((link) => {
					link.classList.remove('active');
					if (link.getAttribute('href') === `#${current}`) {
						link.classList.add('active');
					}
				});
			}

			// Initialize
			generateTOC();
			window.addEventListener('scroll', highlightActiveTOC);
			highlightActiveTOC();
		</script>
	</body>
</html>
