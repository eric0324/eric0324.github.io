---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import Breadcrumb from '../components/Breadcrumb.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';

// 計算工作年資（從 2017/03 開始）
const startYear = 2017;
const currentYear = new Date().getFullYear();
const yearsOfExperience = currentYear - startYear;

// 合作夥伴
const partners = [
	{ name: 'SAT. KNOWLEDGE', url: 'https://sat.cool', logo: 'https://sat.cool/favicon.ico' },
	{ name: 'A.D.A.N. 全時呵護', url: 'https://adan.com.tw/', logo: 'https://adan.com.tw/wp-content/uploads/2020/07/cropped-Image-from-iOS.jpg' },
	{ name: 'EROS HAIR STYLING', url: 'https://eroshair.com/', logo: 'https://eroshair.com/wp-content/uploads/2018/09/logo.jpg' },
	{ name: 'TEMP. Hair Salon', url: 'https://temp-hair.com/', logo: 'https://temp-hair.com/wp-content/uploads/2021/06/IMG_2026.png' },
	{ name: 'TintMap', url: 'https://tintmaps.com/', logo: 'https://tintmaps.com/images/logo.png' },
	{ name: 'applemint', url: 'https://www.applemint.tech/zh-hant/', logo: 'https://www.applemint.tech/wp-content/uploads/2019/06/cropped-applemint-logo%E6%8B%B7%E8%B2%9D.png' },
	{ name: 'Moonbility', url: 'https://moonbility.com/', logo: '/partners/moonbility-logo.svg' },
];

// 專業服務
const services = [
	'網站開發者',
	'講師',
	'技術書作者',
	'技術顧問',
	'貓奴',
];

// 出版作品
const publications = [
	{
		title: 'WordPress 超圖解+No-code 7堂課：不只打造優質專業網站，還要帶你經營獲利與擁抱社群',
		year: '2024',
		description: '一本教導讀者透過七堂課建立 WordPress 網站、管理內容並參與社群的無程式碼指南。',
		url: 'https://www.books.com.tw/products/0011007069'
	},
];
---

<!doctype html>
<html lang="zh-TW">
	<head>
		<BaseHead title={`關於我 - ${SITE_TITLE}`} description={SITE_DESCRIPTION} />
		<style>
			.about-container {
				max-width: 1100px;
				margin: 0 auto;
				padding: 4rem 2rem;
			}

			/* Top Layout: Profile + Introduction */
			.top-section {
				display: grid;
				grid-template-columns: 320px 1fr;
				gap: 5rem;
				margin-bottom: 5rem;
			}

			/* Profile Card */
			.profile-card {
				position: sticky;
				top: 100px;
			}

			.profile-avatar {
				width: 120px;
				height: 120px;
				border-radius: 12px;
				margin-bottom: 1.5rem;
				object-fit: cover;
				border: 3px solid #e5e5e5;
			}

			.profile-card h1 {
				font-size: 2rem;
				margin-bottom: 0.75rem;
				color: #1a1a1a;
				font-weight: 700;
				line-height: 1.2;
			}

			.profile-tags {
				font-size: 0.95rem;
				color: #666;
				line-height: 1.7;
				margin-bottom: 2rem;
			}

			.profile-info {
				border-top: 1px solid #e5e5e5;
				padding-top: 1.5rem;
			}

			.profile-info-item {
				margin-bottom: 0.6rem;
				font-size: 0.9rem;
				color: #666;
				line-height: 1.6;
			}

			.profile-info-item:last-of-type {
				margin-bottom: 1.2rem;
			}

			.profile-info-item a {
				color: #666;
				text-decoration: none;
				transition: color 0.2s ease;
			}

			.profile-info-item a:hover {
				color: #3498db;
			}

			.social-icons {
				display: flex;
				gap: 1rem;
			}

			.social-icons a {
				color: #999;
				transition: all 0.2s ease;
			}

			.social-icons a:hover {
				color: #3498db;
				transform: translateY(-2px);
			}

			.social-icons svg {
				width: 22px;
				height: 22px;
			}

			/* Introduction */
			.intro-section {
				max-width: 650px;
			}

			.intro-section .breadcrumb ol {
				justify-content: flex-start;
			}

			.section-title {
				font-size: 1.75rem;
				margin-bottom: 2rem;
				color: #1a1a1a;
				font-weight: 700;
				letter-spacing: -0.02em;
			}

			.section-content {
				font-size: 1.05rem;
				line-height: 1.9;
				color: #555;
			}

			.section-content p {
				margin-bottom: 1.5rem;
			}

			.section-content p:last-child {
				margin-bottom: 0;
			}

			/* Work Section */
			.work-section {
				margin-bottom: 5rem;
			}

			.work-list {
				list-style: none;
				padding: 0;
				margin: 0;
				display: flex;
				flex-wrap: wrap;
				gap: 0.75rem;
			}

			.work-item {
				background: #f5f5f5;
				padding: 0.6rem 1.2rem;
				border-radius: 6px;
				color: #555;
				font-size: 0.95rem;
				border: 1px solid #e5e5e5;
				transition: all 0.2s ease;
			}

			.work-item:hover {
				background: #fff;
				border-color: #3498db;
				color: #3498db;
			}

			/* Partners Section */
			.partners-section {
				margin-bottom: 5rem;
			}

			.partners-section .section-title {
				font-size: 0.85rem;
				color: #999;
				font-weight: 500;
				text-transform: uppercase;
				letter-spacing: 0.1em;
				margin-bottom: 2rem;
			}

			.partners-marquee {
				overflow: hidden;
				padding: 2rem 0;
			}

			.partners-track {
				display: flex;
				gap: 5rem;
				animation: scroll 25s linear infinite;
			}

			.partners-marquee:hover .partners-track {
				animation-play-state: paused;
			}

			.partner-logo {
				display: flex;
				align-items: center;
				flex-shrink: 0;
			}

			.partner-logo img {
				width: 56px;
				height: 56px;
				object-fit: contain;
				filter: grayscale(100%);
				opacity: 0.5;
				transition: all 0.3s ease;
			}

			.partner-logo:hover img {
				filter: grayscale(0%);
				opacity: 1;
				transform: scale(1.1);
			}

			@keyframes scroll {
				0% {
					transform: translateX(0);
				}
				100% {
					transform: translateX(-50%);
				}
			}

			/* Bottom Grid: Experience + Publications */
			.bottom-grid {
				display: grid;
				grid-template-columns: 1fr 1fr;
				gap: 5rem;
				margin-top: 3rem;
			}

			/* Experience Timeline with dots */
			.experience-list {
				list-style: none;
				padding: 0;
				margin: 0;
				position: relative;
			}

			.experience-list::before {
				content: '';
				position: absolute;
				left: 5px;
				top: 10px;
				bottom: 0;
				width: 2px;
				background: #e5e5e5;
			}

			.experience-item {
				margin-bottom: 3rem;
				padding-left: 2.5rem;
				position: relative;
			}

			.experience-item:last-child {
				margin-bottom: 0;
			}

			.experience-item::before {
				content: '';
				position: absolute;
				left: 0;
				top: 6px;
				width: 12px;
				height: 12px;
				background: #fff;
				border: 2px solid #3498db;
				border-radius: 50%;
				z-index: 1;
			}

			.experience-title {
				font-size: 1.15rem;
				font-weight: 600;
				color: #1a1a1a;
				margin-bottom: 0.5rem;
				line-height: 1.4;
			}

			.experience-period {
				font-size: 0.9rem;
				color: #999;
				margin-bottom: 0.75rem;
				font-weight: 500;
			}

			.experience-description {
				font-size: 1rem;
				color: #666;
				line-height: 1.7;
			}

			/* Publications */
			.publications-list {
				list-style: none;
				padding: 0;
				margin: 0;
			}

			.publication-item {
				background: #fafafa;
				border: 1px solid #e5e5e5;
				border-radius: 12px;
				padding: 2rem;
				margin-bottom: 1.5rem;
				transition: all 0.3s ease;
			}

			.publication-item:hover {
				background: #fff;
				border-color: #3498db;
				box-shadow: 0 4px 12px rgba(52, 152, 219, 0.1);
				transform: translateY(-2px);
			}

			.publication-item:last-child {
				margin-bottom: 0;
			}

			.publication-year {
				display: inline-block;
				background: #3498db;
				color: #fff;
				font-size: 0.75rem;
				font-weight: 600;
				padding: 0.25rem 0.75rem;
				border-radius: 4px;
				margin-bottom: 1rem;
				letter-spacing: 0.05em;
			}

			.publication-title {
				font-size: 1.1rem;
				font-weight: 600;
				margin-bottom: 1rem;
				line-height: 1.6;
			}

			.publication-title a {
				color: #1a1a1a;
				text-decoration: none;
				transition: color 0.2s ease;
			}

			.publication-title a:hover {
				color: #3498db;
			}

			.publication-description {
				font-size: 0.95rem;
				color: #666;
				line-height: 1.7;
			}

			.empty-state {
				color: #999;
				font-style: italic;
			}

			@media (max-width: 968px) {
				.top-section {
					grid-template-columns: 1fr;
					gap: 3rem;
				}

				.profile-card {
					position: static;
				}

				.bottom-grid {
					grid-template-columns: 1fr;
					gap: 3rem;
				}

				.work-section {
					margin-bottom: 3rem;
				}

				.partners-section {
					margin-bottom: 3rem;
				}
			}

			@media (max-width: 720px) {
				.about-container {
					padding: 2.5rem 1.5rem;
				}

				.profile-avatar {
					width: 100px;
					height: 100px;
				}

				.profile-card h1 {
					font-size: 1.75rem;
				}

				.section-title {
					font-size: 1.5rem;
				}

				.top-section {
					gap: 2.5rem;
					margin-bottom: 3rem;
				}

				.bottom-grid {
					gap: 2.5rem;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<div class="about-container">
				<!-- Top Section: Profile + Introduction -->
				<div class="top-section">
					<!-- Left: Profile Card -->
					<div class="profile-card">
						<img src="https://secure.gravatar.com/avatar/a1b4930a46f098761bbb9c70ff58383545925b740b05dcacfd27f31f920ac8f6?s=200&r=g" alt="Eric Wu" class="profile-avatar">
						<h1>Eric Wu</h1>
